#! /usr/bin/env bash

set -e

usage()
{
cat << EOF
usage: $0 options PROFILE1 [PROFILE2] ... [PROFILEN]

OPTIONS:
   -h      Show this message
   -p      Directory containing profiles
EOF
}

PROFILE_DIR=""

while getopts "p:" OPTION
do
     case $OPTION in
         h)
             usage
             exit 1
             ;;
         p)
             PROFILE_DIR="$OPTARG"
             ;;
         ?)
             usage
             exit 1
             ;;
     esac
done

if [ -z "$PROFILE_DIR" ]; then
    echo "Must specify -p"
    exit 1
fi

shift $((OPTIND-1))

while [ "$1" ]; do
    for file in "$PROFILE_DIR/$1/data/"* "$PROFILE_DIR/$1/data/".*; do
	[ -e "$file" ] || continue
	[ $(basename "$file") != "." ] || continue
	[ $(basename "$file") != ".." ] || continue

	basefile=$(basename "$file")
	if [[ "$basefile" == .* ]]; then
	    extension="${basefile#.*.}"
	else
	    extension="${basefile#*.}"
	fi

	case "$extension" in
	    "tar.gz")
		echo "Untaring $file to $HOME"
		tar -zxvf "$file" -C "$HOME"
		;;
	    "tar.gz.gpg")
		echo "Unencrypting and untaring $file to $HOME"
		gpg --decrypt < "$file" | tar -zvf - -C "$HOME"
		;;
	    *)
		echo "Unknown file type for $basefile $extension"
		;;
	esac
    done

    shift
done
